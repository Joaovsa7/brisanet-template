{
  "id": "author",
  "label": "Autor(a)",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "name": {
        "type": "Text",
        "config": {
          "label": "Nome",
          "placeholder": ""
        }
      },
      "uid": {
        "config": {
          "label": "Slug",
          "placeholder": ""
        },
        "type": "UID"
      },
      "avatar": {
        "type": "Image",
        "config": {
          "label": "Avatar",
          "constraint": {
            "width": 200,
            "height": 200
          },
          "thumbnails": []
        }
      },
      "bio": {
        "type": "StructuredText",
        "config": {
          "label": "Bio",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "company": {
        "type": "Text",
        "config": {
          "label": "Empresa",
          "placeholder": ""
        }
      },
      "position": {
        "type": "Text",
        "config": {
          "label": "Cargo",
          "placeholder": ""
        }
      },
      "social_networks": {
        "type": "Group",
        "config": {
          "label": "Redes Sociais",
          "fields": {
            "name": {
              "type": "Select",
              "config": {
                "label": "Rede Social",
                "placeholder": "",
                "options": [
                  "Facebook",
                  "Email",
                  "LinkedIn",
                  "Instagram",
                  "YouTube"
                ]
              }
            },
            "link": {
              "type": "Link",
              "config": {
                "label": "Link",
                "placeholder": "",
                "allowTargetBlank": true,
                "select": null
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "banner": {
              "type": "SharedSlice"
            },
            "info_cards": {
              "type": "SharedSlice"
            },
            "table": {
              "type": "SharedSlice"
            },
            "faq": {
              "type": "SharedSlice"
            },
            "content_block": {
              "type": "SharedSlice"
            },
            "call_to_action": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "robots_index": {
        "type": "Boolean",
        "config": {
          "label": "Robots Index",
          "default_value": false,
          "placeholder_true": "true",
          "placeholder_false": "false"
        }
      },
      "robots_follow": {
        "type": "Boolean",
        "config": {
          "label": "Robots Follow",
          "default_value": false,
          "placeholder_true": "true",
          "placeholder_false": "false"
        }
      }
    }
  }
}
