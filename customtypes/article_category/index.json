{
	"id": "article_category",
	"label": "Categoria de Artigo",
	"format": "page",
	"repeatable": true,
	"status": true,
	"json": {
		"Main": {
			"uid": {
				"config": {
					"label": "UID"
				},
				"type": "UID"
			},
			"name": {
				"type": "StructuredText",
				"config": {
					"label": "Nome",
					"placeholder": "",
					"allowTargetBlank": true,
					"single": "heading1,heading2,heading3,heading4,heading5,heading6,list-item"
				}
			},
			"slices": {
				"type": "Slices",
				"fieldset": "Slice Zone",
				"config": {
					"choices": {
						"most_read_articles": {
							"type": "SharedSlice"
						},
						"content_block": {
							"type": "SharedSlice"
						},
						"latest_articles": {
							"type": "SharedSlice"
						},
						"faq": {
							"type": "SharedSlice"
						},
						"call_to_action": {
							"type": "SharedSlice"
						},
						"author_box": {
							"type": "SharedSlice"
						}
					}
				}
			}
		},
		"SEO & Metadata": {
			"meta_title": {
				"config": {
					"label": "Meta Title",
					"placeholder": "A title of the page used for social media and search engines"
				},
				"type": "Text"
			},
			"meta_description": {
				"config": {
					"label": "Meta Description",
					"placeholder": "A brief summary of the page"
				},
				"type": "Text"
			},
			"robots_index": {
				"type": "Boolean",
				"config": {
					"label": "Robots Index",
					"default_value": false,
					"placeholder_true": "true",
					"placeholder_false": "false"
				}
			},
			"robots_follow": {
				"type": "Boolean",
				"config": {
					"label": "Robots Follow",
					"default_value": false,
					"placeholder_true": "true",
					"placeholder_false": "false"
				}
			}
		},
		"Breadcrumb": {
			"breadcrumb_items": {
				"type": "Group",
				"config": {
					"label": "Itens",
					"fields": {
						"label": {
							"type": "Text",
							"config": {
								"label": "Label",
								"placeholder": ""
							}
						},
						"link": {
							"type": "Link",
							"config": {
								"label": "Link",
								"placeholder": "",
								"allowTargetBlank": true,
								"select": null
							}
						}
					}
				}
			}
		}
	}
}
