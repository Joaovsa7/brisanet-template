{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["./customtypes", "./node_modules", "./prismicio-types.d.ts"]
	},
	"javascript": {
		"formatter": {
      "enabled": true,
			"quoteStyle": "single",
			"trailingComma": "none",
			"arrowParentheses": "always",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
		}
	}
}
